# ============================================
# Development Dockerfile with hot-reload support
# ============================================
FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    git \
    ffmpeg \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv (fast Python package manager)
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Create non-root user
RUN useradd -m -u 1000 babblr && \
    mkdir -p /app /data /cache && \
    chown -R babblr:babblr /app /data /cache

# Set working directory
WORKDIR /app

# Switch to non-root user
USER babblr

# Copy dependency files only (for layer caching)
COPY --chown=babblr:babblr pyproject.toml uv.lock ./

# Install dependencies with uv (includes dev dependencies)
RUN uv sync --frozen

# Add venv to PATH
ENV PATH="/app/.venv/bin:$PATH"

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    BABBLR_API_HOST=0.0.0.0 \
    BABBLR_API_PORT=8000 \
    BABBLR_AUDIO_STORAGE_PATH=/data/audio \
    WHISPER_MODEL=base

# Expose port
EXPOSE 8000

# Development command with hot-reload
# Note: The app code will be mounted as a volume, so we don't copy it here
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
