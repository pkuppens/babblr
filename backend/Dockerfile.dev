# ============================================
# Development Dockerfile with hot-reload support
# ============================================
FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    git \
    ffmpeg \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv (fast Python package manager)
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Create non-root user
RUN useradd -m -u 1000 babblr && \
    mkdir -p /app /data /cache && \
    chown -R babblr:babblr /app /data /cache

# Set working directory
WORKDIR /app

# Switch to non-root user for dependency install
USER babblr

# Copy dependency files only (for layer caching)
# Note: README.md is required by pyproject.toml
COPY --chown=babblr:babblr pyproject.toml uv.lock README.md ./

# Install dependencies with uv (includes dev dependencies)
RUN uv sync --frozen

# Copy entrypoint script
COPY --chown=babblr:babblr docker-entrypoint.sh /app/docker-entrypoint.sh
RUN chmod +x /app/docker-entrypoint.sh

# Switch back to root so entrypoint can fix volume permissions
USER root

# Add venv to PATH
ENV PATH="/app/.venv/bin:$PATH"

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    BABBLR_API_HOST=0.0.0.0 \
    BABBLR_API_PORT=8000 \
    BABBLR_AUDIO_STORAGE_PATH=/data/audio \
    WHISPER_MODEL=large-v3

# Expose port
EXPOSE 8000

# Entrypoint ensures volume permissions and drops to non-root
ENTRYPOINT ["sh", "-c", "set -e; if [ \"$(id -u)\" = \"0\" ]; then mkdir -p /data /home/babblr/.cache/whisper; chown -R babblr:babblr /data /home/babblr/.cache/whisper; exec su -s /bin/sh babblr -c \"$*\"; fi; exec \"$@\"", "--"]

# Development command with hot-reload
# Note: The app code will be mounted as a volume, so we don't copy it here
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
